    <script src="./js/actualizarli.js"></script>
    <script src="./js/eliminarli.js"></script>
    <title>Lineas de credito</title>
    <link rel="shortcut icon" href="imagenes/logoi.png">
</head>
<body>
    <body>
        <div >
            <img src="imagenes/logo_large.png">
        </div>
            <ul class="menu">
            <li>
                <a href="/lclientes">Clientes</a>
            </li>
             <li>
                <a href="/lcreditos">Creditos</a>
